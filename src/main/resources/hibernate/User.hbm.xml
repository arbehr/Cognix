<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="cognitivabrasil.repositorio.data.entities.User" table="users">
    <id column="id" name="id" type="int">
      <generator class="sequence">
        <param name="sequence">users_id_seq</param>
      </generator>
    </id>
    <property column="login" name="username" not-null="true" type="string"/>
    <property column="password" name="passwordMd5" type="string"/>
    <property column="name" name="nome" type="string"/>
    <property name="role" type="string"/>
    <property column="permissions" name="permissionsInternal" type="string"/>   
  </class>
</hibernate-mapping>
